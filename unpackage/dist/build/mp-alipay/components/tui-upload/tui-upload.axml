<view class="tui-container"><view class="tui-upload-box"><block a:for="{{imageList}}" a:for-item="item" a:for-index="index" a:key="index"><view class="tui-image-item"><image class="tui-item-img" src="{{item}}" mode="aspectFill" data-event-opts="{{[['tap',[['previewImage',[index]]]]]}}" catchTap="__e"></image><block a:if="{{!forbidDel}}"><view data-event-opts="{{[['tap',[['delImage',[index]]]]]}}" class="tui-img-del" catchTap="__e"></view></block><block a:if="{{statusArr[index]!=1}}"><view class="tui-upload-mask"><block a:if="{{statusArr[index]==2}}"><view class="tui-upload-loading"></view></block><text class="tui-tips">{{statusArr[index]==2?'上传中...':'上传失败'}}</text><block a:if="{{statusArr[index]==3}}"><view class="tui-mask-btn" hover-class="tui-hover" hover-stay-time="{{150}}" data-event-opts="{{[['tap',[['reUpLoad',[index]]]]]}}" catchTap="__e">重新上传</view></block></view></block></view></block><block a:if="{{isShowAdd}}"><view data-event-opts="{{[['tap',[['chooseImage',['$event']]]]]}}" class="tui-upload-add" onTap="__e"><view class="tui-upload-icon tui-icon-plus"></view></view></block></view></view>